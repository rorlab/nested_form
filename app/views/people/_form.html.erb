<%= simple_form_for(@person, html:{class:"custom"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset class="offset-by-one">
      <legend>Person</legend>
      <div class="row">
        <div class="three columns"><%= f.input :name %></div>
        <div class="three columns"><%= f.input :gender%></div>
        <div class="six columns"><%= f.input :mobile%></div>
      </div>
    </fieldset>

    <fieldset class="offset-by-one">
      <legend>Communications</legend>
      <%= f.fields_for :communications do | communication | %>
        <div class="row">
          <div class="three columns"><%= communication.association :profile_type, :collection => ProfileType.all.map {|type|[type.comm_type, type.id]}, input_html:{class:"three columns"} %></div>
          <div class="eight columns"><%= communication.input :access_point %></div>
          <div class="one columns" style="margin-top:25px;"><%= communication.input :_destroy, as: :boolean, label: false %></div>
        </div>
      <% end %>
    </fieldset>

    <fieldset class="offset-by-one">
      <legend>Contact</legend>
      <%= f.fields_for :contact do | contact | %>
        <div class="row">
          <div class="two column"><%= contact.input :zip_code %></div>
          <div class="ten columns"><%= contact.input :address %></div>
        </div>
        <div class="row">
          <div class="six columns"><%= contact.input :phone %></div>
          <div class="six columns"><%= contact.input :fax %></div>
        </div>
      <% end %>
    </fielset>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"button round" %>
  </div>
<% end %>
